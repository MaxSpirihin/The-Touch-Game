<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thetouchgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".SimpleModeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="StandardModeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="MainMenuActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ColorModeActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="CalculatorModeActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="HardcoreModeActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="MemoryModeActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>